{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{ title }}</h5>
        <p class="card-text">
          Page d'accueil
        </p>
      </div>
    </div>
  </div>
    {% for beer in listBeer %}
      <div class="col-sm-6">
        <div class="card card__beers">
          <div class="card-body">
            <a href="{{ path('beer_detail', {id: beer.id}) }}" class="card-title">{{ beer.name }}</a>
            <p>{{ beer.description }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
</div>
{% endblock %}
